{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "build-service-x64",
      "type": "shell",
      "command": "C:/msys64/mingw64/bin/g++",
      "args": [
        "-std=c++20",
        "-O2",
        "-DNDEBUG",
        "-DUNICODE",
        "-D_UNICODE",
        "-D_WIN32_WINNT=0x0A00",
        "main.cpp",
        "escalate/defender.cpp",
        "match/powershell/powershell.cpp",
        "match/runnable/runnable.cpp",
        "-o",
        "../Service.exe",
        "-lole32",
        "-loleaut32",
        "-luuid",
        "-ladvapi32",
        "-lws2_32",
        "-lwscapi"
      ],
      "options": {
        "cwd": "${workspaceFolder}/Service"
      },
      "problemMatcher": [
        "$gcc"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      }
    },
    {
      "label": "build-amsi-provider-x64",
      "type": "shell",
      "command": "${workspaceFolder}", //literally run the bat files: compileService.bat, compileAmsi.bat and then installAmsi.bat - run the service
      "options": {
        "cwd": "${workspaceFolder}/Service"
      },
      "problemMatcher": [
        "$gcc"
      ]
    }
  ]
}
